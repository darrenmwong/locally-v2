<nav>
<button class='btn1 btn1-6 btn1-6d' ng-click="tripShow = !tripShow">Trips</button>
</nav>

<div class='row'>
  <div class='col-md-4'>
    <button class="tripbtn tripbtn-2 tripbtn-2d">New Trip <i class="fa fa-plus"></i></button>


    <div ng-repeat="trip in trips">
       <button class='tripbtn tripbtn-1 tripbtn-1d' ng-click="tripClick(trip)"> {{trip.name}} <br>
        {{trip.destination}}</button>
    </div>

  </div>

  <div class='col-md-4'>
    <button class="tripbtn tripbtn-2 tripbtn-2d">New Activity <i class="fa fa-plus"></i></button>
    <div ng-repeat="activity in activities">
      <button class='tripbtn tripbtn-1 tripbtn-1d' ng-click="tripClick(trip)"> {{activity.name}} <br>
          {{trip.destination}}</button>
    </div>
  </div>

  <div class='col-md-4'>
    <div class='searchfield'>
      <input type="text" placeholder="Search for places"><button type="submit" class='btn btn-danger'><i class="fa fa-search"></i></button>
    </div>

  </div>



</div> <!--row close-->